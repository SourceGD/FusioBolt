<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mixContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backanim"
    android:gravity="center_horizontal"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/characterImageView"
        android:src="@drawable/dieumignon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayoutContainer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Feu"
            android:src="@drawable/feu"
            android:tag="Feu" />

        <ImageView
            android:id="@+id/eau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Eau"
            android:src="@drawable/gouttes"
            android:tag="Eau" />

        <ImageView
            android:id="@+id/terre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Terre"
            android:src="@drawable/sol"
            android:tag="Terre" />

        <ImageView
            android:id="@+id/vent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Vent"
            android:src="@drawable/vent"
            android:tag="Vent" />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ombrage" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:contextClickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="4"
        android:progressDrawable="@drawable/custom_progress_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCredits"
            android:layout_width="63dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:text="9999"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/tvCreditsimg"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/coin"
            app:layout_constraintBottom_toBottomOf="@+id/tvCredits"
            app:layout_constraintStart_toEndOf="@+id/tvCredits"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/decouverte"
            android:layout_width="234dp"
            android:layout_height="56dp"

            android:layout_marginStart="32dp"
            android:text="@string/mixez_des_l_ments_entre_eux"
            android:textColor="@android:color/white"

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvCreditsimg"
            app:layout_constraintStart_toEndOf="@+id/tvCreditsimg" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>
