<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MixContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayoutContainer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Feu"
            android:src="@drawable/feu"
            android:tag="Feu" />

        <ImageView
            android:id="@+id/eau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Eau"
            android:src="@drawable/gouttes"
            android:tag="Eau" />

        <ImageView
            android:id="@+id/terre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Terre"
            android:src="@drawable/sol"
            android:tag="Terre" />

        <ImageView
            android:id="@+id/vent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Vent"
            android:src="@drawable/vent"
            android:tag="Vent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/boue"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/boue"
            android:tag="Boue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fume"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/fume"
            android:tag="Fume"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lave"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/lave"
            android:tag="Lave"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/vapeur"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/vapeur"
            android:tag="Vapeur"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/vague"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/vague"
            android:tag="Vague"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dust"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/Vent"
            android:src="@drawable/dust"
            android:tag="Dust"
            android:visibility="gone" />


    </FrameLayout>


    <TextView
        android:id="@+id/validityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/black"
        android:padding="16dp"
        android:text="@string/new_discovery"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        tools:visibility="visible" />

</LinearLayout>
