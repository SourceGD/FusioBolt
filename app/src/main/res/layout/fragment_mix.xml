<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MixContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/characterImageView"
        android:src="@drawable/dieumignon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayoutContainer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Feu"
            android:src="@drawable/feu"
            android:tag="Feu" />

        <ImageView
            android:id="@+id/eau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Eau"
            android:src="@drawable/gouttes"
            android:tag="Eau" />

        <ImageView
            android:id="@+id/terre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Terre"
            android:src="@drawable/sol"
            android:tag="Terre" />

        <ImageView
            android:id="@+id/vent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/Vent"
            android:src="@drawable/vent"
            android:tag="Vent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp">

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:contextClickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="4"
        android:progressDrawable="@drawable/custom_progress_bar" />

</LinearLayout>
